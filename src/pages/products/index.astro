---
import MyLayout from '../../layouts/MyLayout.astro';
import PageH1 from '../../components/PageH1.astro';
import productData from '../../data/products.json';

const title = "Welcome to FEK.IO"
const description = 'Products';
---
<script is:inline>
  const downloadProducts = (uri) => {
    window.location.href = uri;
  }
</script>
<MyLayout coverImage="/garmin-3x.jpg" title="Products">
  <PageH1>Products</PageH1>
  <div class="bg-white flex flex-col">
    {productData.map((product) => (
      <div class="flex flex-col md:flex-row md:items-center md:justify-between md:space-x-4 p-4 border-b border-gray-200">
        {/* <div class="flex flex-col md:flex-row md:items-center md:space-x-4"> */}
          
          <a href={`/products/${product.name.toLocaleLowerCase()}`} class="w-24 h-24 md:w-32 md:h-32 flex-none">
            <img src={product.icon} alt={product.name} class="rounded-lg drop-shadow-lg" />
          </a>

          <div class="flex flex-col flex-1">
            <h2 class="text-xl font-bold"><a href={`/products/${product.name.toLocaleLowerCase()}`}>{product.name}</a></h2>
            <p>{product.description}</p>
          </div>
          
        {/* </div> */}
        <div class="flex flex-col md:flex-row md:items-center md:space-x-4 flex-none">
          <p class="text-xl font-bold">FREE</p>
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" onclick={`downloadProducts('${product.uri}');`}>Download</button>
        </div>
      </div>
    ))}
  </div>
</MyLayout>